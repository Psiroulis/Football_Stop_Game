<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.redpepper.footballrunningtime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EntryScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MatchScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menus.SinglePlayerMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menus.TeamSelection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rounds.RoundOf16"
            android:screenOrientation="portrait" />
        <activity android:name=".rounds.RoundOf8" />
        <activity android:name=".rounds.RoundOf4" />
        <activity android:name=".rounds.Final" />
        <activity android:name=".menus.LostTheCup" />
        <activity android:name=".menus.WinTheCup" />
        <activity android:name=".menus.MainMenu" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name=".menus.LoginMenu" />
    </application>

</manifest>